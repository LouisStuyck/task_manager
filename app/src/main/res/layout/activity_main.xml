<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <TextView
            android:text="Nouvelle note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="34dp" android:textColor="#222222"/>
    <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button_travail" android:background="#1DF2F1F1"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/travail"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="@+id/button_travail"
            app:layout_constraintEnd_toEndOf="@+id/button_travail"
            app:layout_constraintBottom_toBottomOf="@+id/button_travail"
            app:layout_constraintTop_toTopOf="@+id/button_travail"/>
    <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button_divers" android:background="#1CF2F1F1"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="56dp" app:layout_constraintStart_toEndOf="@+id/button_personnel"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/travail"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/button_personnel"
            app:layout_constraintEnd_toEndOf="@+id/button_personnel"
            app:layout_constraintBottom_toBottomOf="@+id/button_personnel"
            app:layout_constraintTop_toTopOf="@+id/button_personnel"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/travail"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/button_divers"
            app:layout_constraintEnd_toEndOf="@+id/button_divers"
            app:layout_constraintBottom_toBottomOf="@+id/button_divers"
            app:layout_constraintTop_toTopOf="@+id/button_divers"/>
    <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button_personnel" android:background="#1CF2F1F1"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="56dp" app:layout_constraintStart_toEndOf="@+id/button_travail"/>
    <TextView
            android:text="PERSONNEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_personnel" android:textSize="16dp"
            android:textColor="#222222"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_personnel"
            app:layout_constraintStart_toEndOf="@+id/textView_travail" android:layout_marginStart="60dp"/>
    <TextView
            android:text="DIVERS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_divers" android:textSize="16dp"
            android:textColor="#222222"
            app:layout_constraintStart_toEndOf="@+id/textView_personnel" android:layout_marginStart="60dp"
            app:layout_constraintTop_toBottomOf="@+id/button_divers" android:layout_marginTop="16dp"/>
    <TextView
            android:text="TRAVAIL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_travail" android:textSize="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/button_travail"
            android:textColor="#222222"
            android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="parent"/>
    <FrameLayout
            android:layout_width="304dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/title_layout" android:background="#007E7E7E" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_travail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp">

    </FrameLayout>
    <TextView
            android:text="Aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_label_title2"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/title_layout"
            app:layout_constraintTop_toTopOf="@+id/title_layout"
            app:layout_constraintStart_toStartOf="@+id/title_layout" android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Titre"
            android:ems="10"
            android:id="@+id/title_field"
            app:layout_constraintStart_toEndOf="@+id/icon_label_title2" android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/title_layout"
            app:layout_constraintBottom_toBottomOf="@+id/title_layout" android:textColor="#C0BFBF"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="@+id/title_layout"/>
    <FrameLayout
            android:layout_width="304dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/title_layout"
            android:id="@+id/date_layout" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Date"
            android:ems="10"
            android:id="@+id/date_field"
            app:layout_constraintTop_toTopOf="@+id/date_layout"
            app:layout_constraintBottom_toBottomOf="@+id/date_layout"
            android:textColor="#C0BFBF" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="@+id/date_layout"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Lieu"
            android:ems="10"
            android:id="@+id/location_field"
            app:layout_constraintTop_toTopOf="@+id/frameLayout5"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout5" android:textColor="#C0BFBF"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="@+id/frameLayout5"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Personne conviÃ©es"
            android:ems="10"
            android:id="@+id/people_field"
            app:layout_constraintTop_toTopOf="@+id/frameLayout6"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout6"
            android:textColor="#C0BFBF" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout6"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="notes"
            android:ems="10"
            android:id="@+id/note_field"
            app:layout_constraintTop_toTopOf="@+id/frameLayout7"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout7"
            android:textColor="#C0BFBF" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout7"/>
    <FrameLayout
            android:layout_width="304dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/frameLayout5" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/date_layout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp" app:layout_constraintHorizontal_bias="0.506">

    </FrameLayout>
    <FrameLayout
            android:layout_width="304dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/frameLayout5"
            android:id="@+id/frameLayout6" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp">

    </FrameLayout>
    <FrameLayout
            android:layout_width="304dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/frameLayout6"
            android:id="@+id/frameLayout7" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp">

    </FrameLayout>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSave" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="30dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/icone_clock"
            android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/date_layout"
            app:layout_constraintBottom_toBottomOf="@+id/date_layout"
            app:layout_constraintEnd_toStartOf="@+id/date_field" android:layout_marginEnd="25dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/icone_map"
            android:id="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/frameLayout5"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout5"
            app:layout_constraintEnd_toStartOf="@+id/location_field" android:layout_marginEnd="25dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/icone_user"
            android:id="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/frameLayout6"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout6" app:layout_constraintVertical_bias="0.512"
            app:layout_constraintEnd_toStartOf="@+id/people_field" android:layout_marginEnd="25dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/icone_pen"
            android:id="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/frameLayout7"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout7"
            app:layout_constraintEnd_toStartOf="@+id/note_field" android:layout_marginEnd="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>