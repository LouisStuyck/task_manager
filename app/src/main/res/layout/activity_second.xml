<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">
    <TextView
            android:text="Catégorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="22dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="DIVERS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginStart="5dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:background="#FF5959"/>
    <Button
            android:text="Personnel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="5dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:background="#FACF5A"/>
    <Button
            android:text="Travail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:background="#2F89FC"/>
    <TextView
            android:text="MARDI 4 JUIN 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="11dp" android:textColor="#000000"/>
    <TextView
            android:text="Aujourd'hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="34dp" android:textColor="#000000"/>
    <TextView
            android:text="À faire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="34dp" android:textColor="#000000"/>
    <FrameLayout
            android:layout_width="372dp"
            android:layout_height="65dp"
            android:background="#2F89FC"
            android:id="@+id/frameLayout1" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.347">

    </FrameLayout>
    <TextView
            android:text="Aujourd'hui, 09hh30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textColor="#ffffff"
            android:textSize="11dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_editor_absoluteX="76dp"/>
    <TextView
            android:text="Contacter José"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textColor="#ffffff"
            android:textSize="17dp" tools:layout_editor_absoluteY="294dp" tools:layout_editor_absoluteX="68dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/more"
            android:id="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout1"
            app:layout_constraintTop_toTopOf="@+id/frameLayout1" app:layout_constraintEnd_toEndOf="@+id/frameLayout1"
            android:layout_marginEnd="8dp"/>
    <FrameLayout
            android:layout_width="372dp"
            android:layout_height="64dp" tools:layout_editor_absoluteY="354dp" tools:layout_editor_absoluteX="16dp"
            android:background="#FACF5A" android:id="@+id/frameLayout2">

    </FrameLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/more"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout2"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/frameLayout2"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout2"/>
</androidx.constraintlayout.widget.ConstraintLayout>